{
  "name": "eleniarvanitis.com",
  "repository": "github.com/DatGreekChick/personal",
  "author": "Eleni Arvanitis Konior",
  "license": "ISC",
  "version": "2.0.0",
  "description": "My personal website featuring my portfolio and writing pieces.",
  "main": "main.js",
  "type": "module",
  "babelMacros": {
    "fontawesome-svg-core": {
      "license": "free"
    }
  },
  "scripts": {
    "build": "webpack build --mode development",
    "build:prod": "webpack build --mode production",
    "clean": "rm public/*.bundle.js public/*.bundle.js.LICENSE.txt firebase-debug.log",
    "deploy": "npm run build:prod && npx firebase deploy",
    "lint": "npm run clean; echo \"\nRunning linter...\"; npx eslint .; echo \"\nLinting complete!\"",
    "lint:fix": "npm run lint --fix",
    "prettier": "npx prettier --write \"./**/*.{js,jsx,md}\"",
    "start": "node dev",
    "watch": "npm run build -- -w"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run prettier --",
      "npm run lint:fix --",
      "git add --"
    ],
    "*.{md,css}": [
      "npm run prettier --",
      "git add --"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@eslint/js": "^9.18.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "chokidar": "^4.0.3",
    "css-loader": "^7.1.2",
    "debug": "^4.4.3",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "file-loader": "^6.2.0",
    "firebase-admin": "^13.5.0",
    "firebase-tools": "^14.22.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "react-async-script": "^1.2.0",
    "react-refresh": "^0.18.0",
    "strip-ansi": "^7.1.2",
    "style-loader": "^4.0.0",
    "through2": "^4.0.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@react-spring/web": "^10.0.3",
    "@reduxjs/toolkit": "^2.9.2",
    "firebase": "^12.4.0",
    "hamburger-react": "^2.5.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hot-toast": "^2.6.0",
    "react-loader-spinner": "^7.0.3",
    "react-redux": "^9.2.0",
    "react-router": "^7.9.4",
    "styled-components": "^6.1.19"
  }
}
