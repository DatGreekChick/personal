{
  "name": "eleniarvanitis.com",
  "repository": "github.com/DatGreekChick/personal",
  "author": "Eleni Arvanitis Konior",
  "license": "ISC",
  "version": "2.0.0",
  "description": "My personal website featuring my portfolio and writing pieces.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production bun run build.js",
    "clean": "rm public/chunk*.js LICENSE.txt firebase-debug.log",
    "deploy": "bun run build && bunx firebase deploy",
    "lint": "bunx eslint .",
    "lint:fix": "bun run lint --fix",
    "prettier": "bunx prettier --write \"./**/*.{js,jsx,md}\"",
    "start": "NODE_ENV=development bun dev.js",
    "test": "bun test",
    "test:watch": "bun test --hot --watch"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "bun run prettier --",
      "bun run lint:fix --",
      "git add --"
    ],
    "*.{md,css}": [
      "bun run prettier --",
      "git add --"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.3.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "chokidar": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.3.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "msw": "^1.2.0",
    "open": "^11.0.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@react-spring/web": "^10.0.3",
    "@reduxjs/toolkit": "^2.11.2",
    "firebase": "^12.8.0",
    "hamburger-react": "^2.5.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.1.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-loader-spinner": "^8.0.2",
    "react-redux": "^9.2.0",
    "react-router": "^7.12.0",
    "styled-components": "^6.3.8"
  }
}
