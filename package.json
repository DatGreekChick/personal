{
  "name": "eleniarvanitis.com",
  "repository": "github.com/DatGreekChick/personal",
  "author": "Eleni Arvanitis Konior",
  "license": "ISC",
  "version": "2.0.0",
  "description": "My personal website featuring my portfolio and writing pieces.",
  "main": "main.js",
  "type": "module",
  "babelMacros": {
    "fontawesome-svg-core": {
      "license": "free"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production bun run build.js",
    "clean": "rm public/chunk*.js LICENSE.txt firebase-debug.log",
    "deploy": "bun run build:prod && bunx firebase deploy",
    "lint": "bun run clean; echo \"\nRunning linter...\"; bunx eslint .; echo \"\nLinting complete!\"",
    "lint:fix": "bun run lint --fix",
    "prettier": "bunx prettier --write \"./**/*.{js,jsx,md}\"",
    "start": "NODE_ENV=development bun dev.js"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "bun run prettier --",
      "bun run lint:fix --",
      "git add --"
    ],
    "*.{md,css}": [
      "bun run prettier --",
      "git add --"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "babel-plugin-macros": "^3.1.0",
    "chokidar": "^5.0.0",
    "debug": "^4.4.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "file-loader": "^6.2.0",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "open": "^11.0.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.7.4",
    "react-async-script": "^1.2.0",
    "strip-ansi": "^7.1.2",
    "through2": "^4.0.2"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@react-spring/web": "^10.0.3",
    "@reduxjs/toolkit": "^2.11.1",
    "firebase": "^12.6.0",
    "hamburger-react": "^2.5.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.0",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.68.0",
    "react-hot-toast": "^2.6.0",
    "react-loader-spinner": "^8.0.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.10.1",
    "styled-components": "^6.1.19"
  }
}
